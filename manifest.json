{
  "manifest_version": 2,
  "name": "DARN",
  "version": "1.0",
  "description": "Block spoilers from your favorite books, games, movies, and TV shows!",
  "permissions": ["declarativeContent", "storage"],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
       "16": "images/meap16.png",
       "32": "images/meap32.png",
       "48": "images/meap48.png",
       "128": "images/meap128.png"
     }
  },
  "icons": {
     "16": "images/meap16.png",
     "32": "images/meap32.png",
     "48": "images/meap48.png",
     "128": "images/meap128.png"
  },

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"

}
